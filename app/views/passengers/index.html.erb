<div class="page-header">
  <h1>Passengers</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td>
          <%= link_to "suitcases", passenger_suitcases_path(passenger) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
